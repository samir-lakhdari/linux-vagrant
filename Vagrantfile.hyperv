#
PROVIDER = "hyperv"
BOX_BASE = "centos/7"
VM_RAM = "2048"
VM_CPU = "2"
VM_HOSTNAME = "centos"

Vagrant.configure("2") do |config|
  config.vm.define "centos" do |centos|
    docker.vm.box = BOX_BASE
    docker.vm.hostname = VM_HOSTNAME
    docker.vm.provider PROVIDER do |vm|
      vm.memory = VM_RAM
      vm.cpus = VM_CPU
    end
  end
end
